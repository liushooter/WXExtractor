{
  "name": "WXExtractor",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "微信文章提取器",
  "browser_action": {
    "default_icon": "wx.ico",
    "default_popup": "popup.html",
    "default_title": "微信文章提取器"
  },
  "content_scripts":[{
    "matches":    ["https://mp.weixin.qq.com/*"],
    "js":         ["./content.js", "./popup.js"],
    // "run_at":     "document_idle",
    "all_frames": true
  }],
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
