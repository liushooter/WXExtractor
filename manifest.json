{
  "name": "WXExtractor",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "微信文章提取器",
  "browser_action": {
    "default_icon": "wx.ico",
    "default_popup": "popup.html",
    "default_title": "微信文章提取器"
  },
  "content_scripts":[{
    "matches":    ["https://mp.weixin.qq.com/*"],
    "js":         ["./lib/jquery-2.1.4.min.js", "./content.js"],
    "run_at":     "document_end", // document_idle
    "all_frames": true
  }],
  "background": {
    "scripts": ["./lib/jquery-2.1.4.min.js", "./bg.js"],
    "persistent": false //background page 变成 event page
   },
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
